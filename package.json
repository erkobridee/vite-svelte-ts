{
  "name": "vite-svelte-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "unset:git-hooks-path": "git config --unset core.hooksPath",
    "simple-git-hooks": "npx simple-git-hooks",
    "postinstall": "is-ci || npm run simple-git-hooks",
    "prettier": "prettier --write .",
    "eslint": "eslint --fix \"src/**/*.{js,ts,svelte}\"",
    "lint": "run-s prettier eslint",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "ci": "cross-env NODE_ENV=production run-s build"
  },
  "devDependencies": {
    "@eslint/compat": "1.4.0",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@tailwindcss/vite": "4.1.14",
    "@tsconfig/svelte": "5.0.5",
    "@types/node": "24.7.2",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "cross-env": "10.1.0",
    "eslint": "9.37.0",
    "eslint-plugin-svelte": "3.12.4",
    "globals": "16.4.0",
    "is-ci": "4.1.0",
    "lint-staged": "16.2.4",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "3.4.0",
    "prettier-plugin-tailwindcss": "0.7.0",
    "simple-git-hooks": "2.13.1",
    "svelte-check": "4.3.3",
    "typescript": "5.9.3",
    "vite": "7.1.10",
    "vite-tsconfig-paths": "5.1.4"
  },
  "dependencies": {
    "svelte": "5.40.1",
    "tailwindcss": "4.1.14"
  },
  "lint-staged": {
    "**/*.{js,ts,md,mdx,svelte}": "prettier --write",
    "src/**/*.{js,ts,svelte}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}